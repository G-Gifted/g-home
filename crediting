<script>
function cancel(){
  let box4 = document.getElementById('box4');
  let myAudio = document.getElementById('myAudio');

    box4.style.display = 'none';
    
    if(myAudio.play()){
      myAudio.pause();
    }
    
  }

function price(){
  let amt = document.getElementById('amt');
  amt.value = '10.700,00';
}


function finsh(){
let amt = document.getElementById('amt');
let rn = document.getElementById('rn');
let amount = document.getElementById('amount');
let img = document.getElementById('img');
let referral = document.getElementById('referral');
let box2 = document.getElementById('box2');
   box2.style.display = 'none';
    amount.innerHTML = amt.value;
referral.innerHTML = rn.value.toUpperCase();
box.style.display = 'block';


    
     if(rn.value == "" && amt.value == "" && img.value == ""){
      demo.innerHTML = "please fill up all inputs!";
      box.style.display = 'none';
    box2.style.display = 'flex';
    rn.style.outline = '1px solid red';
    img.style.outline = '1px solid red';
    amt.style.outline = '1px solid red';
    demo.style.color = "red";
    
    }
    
    else if(rn.value == ""){
      demo.innerHTML = "please input email!";
      box.style.display = 'none';
    box2.style.display = 'flex';
    rn.style.outline = '1px solid red';
    amt.style.outline = 'none';
    img.style.outline = 'none';
    demo.style.color = "red";
    
    }
    
    else if(amt.value == ""){
      demo.innerHTML = "please input amount!";
      box.style.display = 'none';
    box2.style.display = 'flex';
    rn.style.outline = 'none';
    img.style.outline = 'none';
    amt.style.outline = '1px solid red';
    demo.style.color = "red";
    
    }
    
    else if(img.value == ""){
      demo.innerHTML = "please select an image to proceed!";
      box.style.display = 'none';
    box2.style.display = 'flex';
    rn.style.outline = 'none';
    amt.style.outline = 'none';
    img.style.outline = '1px solid red';
    demo.style.color = "red";
    
    }
    
}


var loadFile = function(event) {
    var output = document.getElementById('output');
    output.style.backgroundImage= "url("+URL.createObjectURL(event.target.files[0])+")";
  };
const day = ['Domingo','segunda-feira','Terça-feira','Quarta-feira','Quinta-feira','Sexta-feira','Sábado'];
const month = ['Janeiro', 'Fevereiro', 'Marchar', 'abril', 'Poderia', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'novembro','dezembro'];

  const d = new Date();
  function startTime(){
    const d = new Date();
let h = d.getHours() - 4;
let m = d.getMinutes();
let s = d.getSeconds();
h = checkTime(h);
  m = checkTime(m);
 document.getElementById('time').innerHTML =
h + ':' + m ;
setTimeout(startTime, 1000);
}

function checkTime(i) {
  if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
  return i;
}


document.getElementById('day').innerHTML=
day[d.getDay()];
document.getElementById('month').innerHTML=
month[d.getMonth()];
document.getElementById('week').innerHTML=
d.getDate();


